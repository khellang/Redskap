<#@ import namespace="System.IO" #>
<#@ import namespace="System.Text" #>
<#@ import namespace="System.Collections.Generic" #>
<#+
    private static IEnumerable<string> GetNames(string filename)
    {
        var headerLine = true;
        
        foreach (var line in File.ReadLines(filename, Encoding.GetEncoding("ISO-8859-1")))
        {
            if (headerLine)
            {
                headerLine = false;
                continue;
            }
            
            var parts = line.Split('\t');

            var name = parts[0];

            if (name.Length > 3)
            {
                yield return name;
            }
        }
    }

    public void GenerateClass(string className, string filename)
    {
#>
