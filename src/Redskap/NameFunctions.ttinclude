namespace Redskap
{
    using System.Diagnostics;
    using System.Runtime.CompilerServices;

    [CompilerGenerated]
    [DebuggerNonUserCode]
    internal static class <#= className #>
    {
        public static readonly string[] All =
        {
        <#+ foreach (var name in GetNames(filename)) { #>
    <#= name #>,
        <#+ } #>
};
    }
}
<#+ } #>